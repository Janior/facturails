<h3 class="flash"><%= flash[:notice] %></h3>

<% form_for @customer do |form| %>
	<fieldset>
		<legend>Editar cliente</legend>
		
		<div class="<%= cycle('even', 'odd') %>">
			<label for="customer_name">Nombre:</label>
			<%= form.text_field :name, :class => "textfield" %>
			<%= error_for :customer, :name %>
		</div>
		
		<div class="<%= cycle('even', 'odd') %>">
			<label for="customer_nif">NIF/CIF:</label>
			<%= form.text_field :nif, :class => "textfield" %>
			<%= error_for :customer, :nif %>
		</div>
		
		<div class="<%= cycle('even', 'odd') %>">
			<label for="customer_email">E-mail:</label>
			<%= form.text_field :email, :class => "textfield" %>
		</div>
		
		<div class="<%= cycle('even', 'odd') %>">
			<label for="customer_phone">Teléfono:</label>
			<%= form.text_field :phone, :class => "textfield" %>
		</div>
		
		<div class="<%= cycle('even', 'odd') %>">
			<label for="customer_address">Dirección:</label>
			<%= form.text_area :address, :class => "textarea" %> 
		</div>
		
		<% if @customer.id %>
		<div class="<%= cycle('even', 'odd') %>">
			<span class="label">Dirección pública:</span>
			<%= link_to public_invoices_path(@customer.id, @customer.private_key), public_invoices_path(@customer.id, @customer.private_key)%>
		</div>
		<% end %>
		
		<div class="<%= cycle('even', 'odd') %>">
			<%= hidden_field :customer, :id %>
			<%= submit_tag "Guardar", :class => "button" %>
		</div>
		
		<% if @customer.id %>
		<div class="<%= cycle('even', 'odd') %> right">
			<%= link_to "Borrar", customer_path(@customer), :method => :delete, :confirm => "¿Seguro?" %>
		</div>
		<% end %>
	</fieldset>	
<% end %>
